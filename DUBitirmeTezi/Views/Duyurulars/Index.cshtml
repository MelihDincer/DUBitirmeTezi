@model IEnumerable<DUBitirmeTezi.Models.Duyurular>

@{
    ViewData["Title"] = "Duyurular";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_sayfaBaslik")

<section class="events">
    <div class="wrapper flex container">

        <div class="content">
            <nav class="tab-nav">
                <ul class="event-nav">
                    <li class="event-item active"><a href="#">Tüm Duyurular</a></li>
                </ul>
            </nav>
            <div class="row ml-1">
                <div class="col-lg-12">
                    @foreach (var item in Model)
                    {
                    <div class="event-c-2">
                        <div class="event-image">
                            <img src="@item.Url">
                        </div>
                        <div class="event-details">
                            <span class="event-date">@item.EklendigiTarih.ToShortDateString()</span>
                            <a class="event-title" asp-action="Details" asp-route-id="@item.Id">
                                @item.DuyuruAdi
                            </a>

                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>















